/ {
	pwmleds {
		compatible = "pwm-leds";
		pwm_y: pwm_y {
			pwms = <&pwm3 0 PWM_HZ(100) PWM_POLARITY_INVERTED>;
		};
		pwm_w: pwm_w {
			pwms = <&pwm4 0 PWM_HZ(100) PWM_POLARITY_INVERTED>;
		};
	};

	pwm-led-pins {
		compatible = "cros-ec,pwm-led-pins";

		battery_led: battery-led {
			led-id = "EC_LED_ID_BATTERY_LED";
			led-pwms = <&pwm_y &pwm_w>;

			color_off: color-off {
				led-color = "LED_OFF";
				led-values = <0 0>;
			};

			color_amber: color-amber {
				led-color = "LED_AMBER";
				br-color = "EC_LED_COLOR_AMBER";
				led-values = <100 0>;
			};

			color_white: color-white {
				led-color = "LED_WHITE";
				br-color = "EC_LED_COLOR_WHITE";
				led-values = <0 100>;
			};
		};
	};
};

/* Amber "battery charging" LED */
&pwm3 {
	status = "okay";
	clock-bus = "NPCX_CLOCK_BUS_LFCLK";
	pinctrl-0 = <&pwm3_gp80>;
	pinctrl-names = "default";
};

/* White "battery full" LED */
&pwm4 {
	status = "okay";
	clock-bus = "NPCX_CLOCK_BUS_LFCLK";
	pinctrl-0 = <&pwm4_gpb6>;
	pinctrl-names = "default";
};
