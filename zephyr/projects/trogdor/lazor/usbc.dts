/ {
	usbc {
		#address-cells = <1>;
		#size-cells = <0>;

		/* TODO(b/227359762): lazor: move UBC-C configuration into the
		 * devicetree
		 */
		port0@0 {
			compatible = "named-usbc-port";
			reg = <0>;

			bc12 = <&bc12_port0>;
			tcpc {
				compatible = "parade,ps8xxx";
				status = "okay";
				port = <&i2c_tcpc0>;
				i2c-addr-flags = "PS8XXX_I2C_ADDR1_FLAGS";
			};

			ppc {
				compatible = "ti,sn5s330";
				status = "okay";
				port = <&i2c_tcpc0>;
				i2c-addr-flags = "SN5S330_ADDR0_FLAGS";
			};

			chg {
				compatible = "intersil,isl923x";
				status = "okay";
				port = <&i2c_power>;
			};
		};

		port1@1 {
			compatible = "named-usbc-port";
			reg = <1>;

			bc12 = <&bc12_port1>;
			tcpc {
				compatible = "parade,ps8xxx";
				status = "okay";
				port = <&i2c_tcpc1>;
				i2c-addr-flags = "PS8XXX_I2C_ADDR1_FLAGS";
			};

			ppc {
				compatible = "ti,sn5s330";
				status = "okay";
				port = <&i2c_tcpc1>;
				i2c-addr-flags = "SN5S330_ADDR0_FLAGS";
			};
		};
	};
};
