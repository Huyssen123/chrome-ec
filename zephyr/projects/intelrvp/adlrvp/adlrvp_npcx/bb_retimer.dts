&i2c0_0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	pinctrl-0 = <&i2c0_0_sda_scl_gpb4_b5>;
	pinctrl-names = "default";

	usb_c0_bb_retimer: jhl8040r@56 {
		compatible = "intel,jhl8040r";
		reg = <0x56>;
		label = "USB_C0_BB_RETIMER";
		reset-pin = <&usb_c0_bb_retimer_rst>;
	};
};

