/ {
	usbc {
		compatible = "named-usbc-ports";
		#address-cells = <1>;
		#size-cells = <0>;
		port0: usbc-port@0 {
			reg = <0>;
			bc12 {
				compatible = "pericom,pi3usb9201";
				status = "okay";
				irq = <&int_usb_c0_bc12>;
				port = <&i2c_power>;
				i2c-addr-flags = "PI3USB9201_I2C_ADDR_3_FLAGS";
			};
			ppc_port0: ppc {
				compatible = "ti,sn5s330";
				status = "okay";
				port = <&i2c_tcpc0>;
				i2c-addr-flags = "SN5S330_ADDR0_FLAGS";
			};
			tcpc {
				compatible = "parade,ps8xxx";
				status = "okay";
				port = <&i2c_tcpc0>;
				i2c-addr-flags = "PS8XXX_I2C_ADDR1_FLAGS";
			};
		};

		port1: usbc-port@1 {
			reg = <1>;
			bc12 {
				compatible = "pericom,pi3usb9201";
				status = "okay";
				irq = <&int_usb_c1_bc12>;
				port = <&i2c_eeprom>;
				i2c-addr-flags = "PI3USB9201_I2C_ADDR_3_FLAGS";
			};
			ppc {
				compatible = "ti,sn5s330";
				status = "okay";
				port = <&i2c_tcpc1>;
				i2c-addr-flags = "SN5S330_ADDR0_FLAGS";
			};
			tcpc {
				compatible = "parade,ps8xxx";
				status = "okay";
				port = <&i2c_tcpc1>;
				i2c-addr-flags = "PS8XXX_I2C_ADDR1_FLAGS";
			};
		};
	};
	usbc-alt-chips {
		ppc_port0_syv: ppc-port0 {
			compatible = "silergy,syv682x";
			status = "okay";
			port = <&i2c_tcpc0>;
			i2c-addr-flags = "SYV682X_ADDR1_FLAGS";
			frs_en_gpio = <&gpio_usb_c0_frs_en>;
			alternate-for = <&ppc_port0>;
		};
	};
};
